 @model Project
@{
    ViewData["Title"] = "Project Details";

}
<h2>Project Details</h2>

<div class="card">
    <div class="class-body">

        <h3 class="card-title">@Model.Name</h3>
        <p class="card-text">@Model.Description</p>

        <dl class="row">
            <dt class="col-sm-3">Project ID</dt>
            <dd class="col-sm-9">@Model.ProjectId</dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        @* You explicitly declare the home controller *@
        <a asp-asp-controller="Project" asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary">Edit</a>

        @* // Also, implicitly the default controller is Project because details is in Projects folder(Naming Convention) *@
        <a asp-action="Index" class="btn btn-secondary">Back to the List</a>


    </div>
</div>
